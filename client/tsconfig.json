{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "allowJs": true,
    "types": [
      "vite/client",
      "vite-plugin-pages/client",
      "unplugin-icons/types/vue",
      "jest",
      "node",
      "@testing-library/jest-dom"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
