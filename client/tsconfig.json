{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowJs": true,
    "types": [
      "vite/client",
      "vite-plugin-pages/client",
      "unplugin-icons/types/vue"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "exclude": ["dist", "node_modules"]
}
